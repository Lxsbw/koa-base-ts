{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    // "sourceMap": true,
    // "esModuleInterop": true,
    "experimentalDecorators": true, // 特性支持
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
